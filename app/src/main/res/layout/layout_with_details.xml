<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="1dp"
    android:padding="1dp"
    android:background="@drawable/buttonshape"

    >
    <RelativeLayout
        android:id="@+id/Button"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true">

        <View
            android:layout_height="36dp"
            android:layout_width="36dp"
            android:background="@drawable/ic_keyboard_arrow_up_black_24dp"

            />


    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/Button"
        android:padding="10dp"
        android:text="this is item detailed 1"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:drawableLeft="@drawable/ic_build_black_24dp"
        android:drawablePadding="10dp"
        android:layout_toStartOf="@id/Button"
        android:saveEnabled="true"


        />
    <TextView
        android:drawableLeft="@drawable/ic_access_time_black_24dp"
        android:drawablePadding="10dp"
        android:id="@+id/textView2"
        android:layout_below="@id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_toLeftOf="@id/Button"
        android:padding="10dp"
        android:text="this is item detailed 2"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_toStartOf="@id/Button"
        android:saveEnabled="true"/>

 <com.github.aakira.expandablelayout.ExpandableLinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:id="@+id/expandableLayout"
     android:layout_below="@id/textView2"
     android:orientation="vertical"
     app:ael_duration="400"
     app:ael_expanded="false"
     app:ael_interpolator= "bounce"
     >
     <TextView
         android:drawableLeft="@drawable/ic2_train_black_24dp"
         android:drawablePadding="10dp"
         android:id="@+id/textViewDetails1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_toLeftOf="@id/Button"
         android:padding="10dp"
         android:text="this is details of item "
         android:textColor="@android:color/white"
         android:textSize="16sp"
         android:layout_toStartOf="@id/Button"
         android:saveEnabled="true"/>
     <TextView
         android:drawableLeft="@drawable/ic_device_hub_black_24dp"
         android:drawablePadding="10dp"
         android:id="@+id/textViewDetails2"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="false"
         android:layout_toLeftOf="@id/Button"
         android:padding="10dp"
         android:text="this is details of item "
         android:textColor="@android:color/white"
         android:textSize="16sp"
         android:layout_toStartOf="@id/Button"
         android:layout_below="@id/textViewDetails1"
         android:saveEnabled="true"/>
     <TextView
         android:drawableLeft="@drawable/ic_code_black_24dp"
         android:drawablePadding="10dp"
         android:id="@+id/textViewDetails3"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="false"
         android:layout_toLeftOf="@id/Button"
         android:padding="10dp"
         android:text="this is details of item "
         android:textColor="@android:color/white"
         android:textSize="16sp"
         android:layout_toStartOf="@id/Button"
         android:layout_below="@id/textViewDetails2"
         android:saveEnabled="true"/>



 </com.github.aakira.expandablelayout.ExpandableLinearLayout>


</RelativeLayout>